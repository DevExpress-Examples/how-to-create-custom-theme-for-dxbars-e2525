    <!--BarContainerControl-->
    <SolidColorBrush x:Key="BackgroundForBarContainerControl" Color="Silver"/>
    <ControlTemplate x:Key="{dxbt:BarContainerControlThemeKey ResourceKey=BackgroundTemplate}" TargetType="{x:Type ContentControl}">
        <Border x:Name="Background" Background="{StaticResource BackgroundForBarContainerControl}">
            <ContentPresenter Content="{TemplateBinding Content}"/>
        </Border>
    </ControlTemplate>
    <!--BarControl-->
    <SolidColorBrush x:Key="BackgroundForBarControl" Color="Silver"/>
    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=BarContentTemplate}" TargetType="{x:Type ContentControl}">
        <Border Width="Auto" Height="Auto" Background="{StaticResource BackgroundForBarControl}">
            <ContentPresenter/>
        </Border>
    </ControlTemplate>
    <!--DragWidget-->
    <SolidColorBrush x:Key="BorderForDragWidget" Color="Silver"/>
    <SolidColorBrush x:Key="ForegroundForDragWidget" Color="Black"/>
    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=DragWidgetTemplate}" TargetType="{x:Type dxb:DragWidget}">
        <Border Margin="2,0,0,0" Width="Auto" Background="{StaticResource BorderForDragWidget}" SnapsToDevicePixels="True">
            <Grid Margin="3,5,0,5" Width="5" Height="Auto">
                <Path Height="Auto" Stretch="Fill" Data="F1 M 0,3.05176e-005L 1,3.05176e-005L 1,8.00003L 0,8.00003L 0,3.05176e-005 Z M 3,6.10352e-005L 4,6.10352e-005L 4,8.00006L 3,8.00006L 3,6.10352e-005 Z "
					  Fill="{StaticResource ForegroundForDragWidget}" Margin="0,0,1,0" Width="4"/>
                <Path Height="Auto" Stretch="Fill" Data="F1 M 1,0L 2,0L 2,8L 1,8L 1,0 Z M 4,3.05176e-005L 5,3.05176e-005L 5,8.00003L 4,8.00003L 4,3.05176e-005 Z "
					  Margin="1,0,0,0" Width="4" Opacity="0.35"
                      Fill="{StaticResource ForegroundForDragWidget}"/>
            </Grid>
        </Border>
    </ControlTemplate>
