    <SolidColorBrush x:Key="ForegroundForCheckedQuickCustomizationButton" Color="Black" />
    <SolidColorBrush x:Key="ForegroundForDisabledQuickCustomizationButton" Color="LightGray" />
    <ControlTemplate x:Key="{dxbt:BarControlThemeKey ResourceKey=QuickCustomizationButtonInMainMenuTemplate}" TargetType="{x:Type ToggleButton}">
        <Grid Width="13">
            <Border Cursor="Hand" x:Name="border" Width="11" Height="19" Background="{StaticResource BackgroundForQuickCustomizationButton}" SnapsToDevicePixels="True" Margin="0,1,2,0">
                <Grid Width="7" Height="6" x:Name="grid">
                    <Path Stretch="Fill" Data="F1 M 396,282L 403,282L 400,287L 399,287L 396,282 Z " HorizontalAlignment="Center" VerticalAlignment="Top" Width="7" Height="5" x:Name="path" Fill="{StaticResource ForegroundForQuickCustomizationButton}" />
                    <Path Stretch="Fill" Data="F1 M 396,282L 403,282L 400,287L 399,287L 396,282 Z " HorizontalAlignment="Center" VerticalAlignment="Top" Width="7" Height="5" x:Name="path1" Opacity="0" Fill="{StaticResource ForegroundForHotQuickCustomizationButton}" />
                    <Path Stretch="Fill" Data="F1 M 396,282L 403,282L 400,287L 399,287L 396,282 Z " HorizontalAlignment="Center" VerticalAlignment="Top" Width="7" Height="5" x:Name="path2" Opacity="0" Fill="{StaticResource ForegroundForPressedQuickCustomizationButton}" />
                    <Path Stretch="Fill" Data="F1 M 396,282L 403,282L 400,287L 399,287L 396,282 Z " HorizontalAlignment="Center" VerticalAlignment="Top" Width="7" Height="5" x:Name="path3" Opacity="0" Fill="{StaticResource ForegroundForCheckedQuickCustomizationButton}" />
                    <Path Stretch="Fill" Data="F1 M 396,282L 403,282L 400,287L 399,287L 396,282 Z " HorizontalAlignment="Center" VerticalAlignment="Top" Width="7" Height="5" x:Name="path4" Opacity="0" Fill="{StaticResource ForegroundForDisabledQuickCustomizationButton}" />
                </Grid>
            </Border>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="path1" Storyboard.TargetProperty="Opacity">
                                <DiscreteDoubleKeyFrame KeyTime="0" Value="1.0" />
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="path2" Storyboard.TargetProperty="Opacity">
                                <DiscreteDoubleKeyFrame KeyTime="0" Value="1.0" />
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Checked">
                        <Storyboard>
                            <Storyboard>
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="path3" Storyboard.TargetProperty="Opacity">
                                    <DiscreteDoubleKeyFrame KeyTime="0" Value="1.0" />
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <Storyboard>
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="path4" Storyboard.TargetProperty="Opacity">
                                    <DiscreteDoubleKeyFrame KeyTime="0" Value="1.0" />
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>
    <!--Content for BarItems-->
    <SolidColorBrush x:Key="ForegroundForBarItemsInMainMenu" Color="White" />
    <SolidColorBrush x:Key="ForegroundForHotContentInMainMenu" Color="White" />
    <SolidColorBrush x:Key="ForegroundForPressedContentInMainMenu" Color="White" />
    <SolidColorBrush x:Key="ForegroundForDisabledContentInMainMenu" Color="LightGray" />
    <Style x:Key="{dxbt:BarItemThemeKey ResourceKey=NormalContentStyleInMainMenu}" TargetType="{x:Type ContentControl}">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundForBarItemsInMainMenu}" />
    </Style>
    <Style x:Key="{dxbt:BarItemThemeKey ResourceKey=HotContentStyleInMainMenu}" TargetType="{x:Type ContentControl}">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundForHotContentInMainMenu}" />
    </Style>
    <Style x:Key="{dxbt:BarItemThemeKey ResourceKey=PressedContentStyleInMainMenu}" TargetType="{x:Type ContentControl}">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundForPressedContentInMainMenu}" />
    </Style>
    <Style x:Key="{dxbt:BarItemThemeKey ResourceKey=DisabledContentStyleInMainMenu}" TargetType="{x:Type ContentControl}">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundForDisabledContentInMainMenu}" />
    </Style>
</ResourceDictionary>